@{
	Layout = "_Layout_Login";
}
<div class="wrap-login100 p-l-55 p-r-55 p-t-40 p-b-54">
	<form class="login100-form validate-form" asp-controller="Login" asp-action="EmailPassword">
		<div class="login100-form-logo m-t-20 m-b-20">
			<img class="logo" src="https://theuniqueitsolution.com/Images/Png_UniqueIT-min.png">
		</div>
		
		<div class="wrap-input100 validate-input m-b-23 m-t-50" data-validate="Username is reauired">
			<span class="label-input100">Email</span>
			<input class="input100" type="text" name="email" placeholder="Type your Email">
			<span class="focus-input100" data-symbol="&#xf206;"></span>
		</div>

		<div class="text-right p-t-2 p-b-2">
			<a asp-controller="Login" asp-action="Index">
				Login?
			</a>
		</div>

		<div class="container-login100-form-btn m-t-20">
			<div class="wrap-login100-form-btn">
				<div class="login100-form-bgbtn"></div>
				<button type="submit" class="login100-form-btn">
					Email Password
				</button>
			</div>
		</div>
	</form>
</div>