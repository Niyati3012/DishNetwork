@{
	Layout = "_Layout_Login";
}
@model DishNetwork.Entity.ViewModels.UserInfo

<div class="wrap-login100 p-l-55 p-r-55 p-t-40 p-b-54">
	<form class="login100-form validate-form" asp-action="LoginUser" asp-controller="Login" >
		<div class="login100-form-logo m-t-20 m-b-20">
			<img class="logo" src="https://theuniqueitsolution.com/Images/Png_UniqueIT-min.png">
		</div>

		<div class="wrap-input100 validate-input m-b-23 m-t-50" data-validate="Username is reauired">
			<span class="label-input100">Username</span>
			<input class="input100" type="text" asp-for="Email" name="Email" placeholder="Type your username">
			<span class="focus-input100" data-symbol="&#xf206;"></span>
		</div>

		<div class="wrap-input100 validate-input" data-validate="Password is required">
			<span class="label-input100">Password</span>
			<input class="input100" type="password" asp-for="Password" name="Password" placeholder="Type your password">
			<span class="focus-input100" data-symbol="&#xf190;"></span>
		</div>

		<div class="text-right p-t-8 p-b-31">
			<a asp-action="ForgotPassword" asp-controller="Login">
				Forgot password?
			</a>
		</div>

		<div class="container-login100-form-btn m-t-20">
			<div class="wrap-login100-form-btn">
				<div class="login100-form-bgbtn"></div>
				<button type="submit" class="login100-form-btn">
					Login
				</button>
			</div>
		</div>
	</form>
</div>