<script>
    async function getDeviceStatus(deviceId) {
        try {
            // Fetch the device status data
            const response = await fetch(`/dishnetwork/devices/getbyid?id=${deviceId}`);
            if (response.ok) {
                // Parse the JSON result
                const result = await response.json();
                debugger
                // Extract relevant data from the result
                const services = result.deviceStatus.services;
                const transponders = result.deviceStatus.transponders;
                const software = result.deviceStatus.software;

                // Update Services section
                $('#servicesContainer .text-success').text(services.active);
                $('#servicesContainer .text-danger').text(services.errored);

                // Update Transponders section
                $('#transpondersContainer .text-success').text(transponders.active);
                $('#transpondersContainer .text-danger').text(transponders.errored);

                // Update Software section
                $('#softwareContainer .text-secondry').text(software);
                // Access the DataPorts array from the result
                const dataPorts = result.dataPorts;
                var container = $('#dataPortsContainer');

                // Clear the container before appending new data
                container.empty();

                // Iterate over the dataPorts array and build HTML for each data port
                dataPorts.forEach(function (dataPort) {
                    var html = `
                        <div class="col-xl-3">
                            <div class="">
                                <div class="card card-body bg-body-white rounded-0 card-xl-stretch border border-3 mt-2">
                                    <div class="bg-secondary rounded-4 p-2">
                                        <div class="row mx-1">
                                            <div class="col-md-4 text-dark bold">ID</div>
                                            <div class="col-md-8 text-muted">${dataPort.id}</div>
                                            <div class="col-md-4 text-dark bold">Role</div>
                                            <div class="col-md-8 text-muted">${dataPort.role}</div>
                                            <div class="col-md-4 text-dark bold">IP</div>
                                            <div class="col-md-8 text-muted">${dataPort.ip}</div>
                                            <div class="col-md-4 text-dark bold">Status</div>
                                            <div class="col-md-8 text-muted">${dataPort.statusMessage}</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    `;
                    // Append the generated HTML to the container
                    container.append(html);
                });

                console.log('Device Data:', result);
            } else {
                console.error('Failed to retrieve device status');
            }
        } catch (error) {
            alert("Hello! I am an alert box!!");
            console.error('Error:', error);
        }
    }

    // Call the function with the desired device ID
    getDeviceStatus(4);
</script>